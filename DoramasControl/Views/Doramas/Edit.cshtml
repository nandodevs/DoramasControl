@model DoramasModel


<div class="container bg-dark p-5 rounded-5">
    <h1 class="text-white">Editar Dorama✌️</h1>

    <form class="text-white" asp-action="Edit" method="post" asp-controller="Doramas" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nacionalidade"></label>
            <input asp-for="Nacionalidade" class="form-control" />
            <span asp-validation-for="Nacionalidade" class="text-danger"></span>
        </div>

        <div class="form-group text-white">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
                <option value="Iniciado">Iniciado</option>
                <option value="NaoIniciado">Não Iniciado</option>
                <option value="Concluido">Concluído</option>
                <option value="Proximo">Próximo</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QtdEpisodios">Quantidade de Episódiso</label>
            <input asp-for="QtdEpisodios" class="form-control" />
            <span asp-validation-for="QtdEpisodios" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataInicio">Data de Início</label>
            <input asp-for="DataInicio" type="date" class="form-control" />
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>

        <div class="form-group text-white">
            <label asp-for="DataFim">Data de Finalização</label>
            <input asp-for="DataFim" type="date" class="form-control" />
            <span asp-validation-for="DataFim" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Editar</button>
            <a class="btn btn-primary" asp-asp-controller="Doramas" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>