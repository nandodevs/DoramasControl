@model DoramasModel

<h1 class="text-white">Adicione um Dorama✌️</h1>
<div class="container align-content-center text-white">
    <form class="input-sm" asp-action="Create" method="post" asp-controller="Doramas" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nacionalidade">Naciolidade</label>
            <input asp-for="Nacionalidade" class="form-control input-sm" />
            <span asp-validation-for="Nacionalidade" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control input-sm" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control input-sm">
                <option value="Iniciado">Iniciado</option>
                <option value="NaoIniciado">Não Iniciado</option>
                <option value="Concluido">Concluído</option>
                <option value="Proximo">Próximo</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QtdEpisodios">Quantidade de Episódios</label>
            <input asp-for="QtdEpisodios" class="form-control input-sm" />
            <span asp-validation-for="QtdEpisodios" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataInicio">Data de Inicio</label>
            <input asp-for="DataInicio" type="date" class="form-control input-sm" />
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataFim">Data de Fim</label>
            <input asp-for="DataFim" type="date" class="form-control input-sm" />
            <span asp-validation-for="DataFim" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm">Adicionar</button>
            <button type="submit" asp-action="Index" class="btn btn-primary btn-sm">Voltar</button>
        </div>
    </form>
</div>
