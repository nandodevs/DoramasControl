@model DoramasModel



<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Doramas</h1>
    </div>
    <form method="post" asp-controller="Doramas" asp-action="Delete">
        <input type="hidden" asp-for=Id />
        <h2 class="text-white">Tem certeza que deseja excluir o registro abaixo??</h2>
        <div class="mb-3">
            <label for="Nacionalidade" class="text-light form-label">Nacionalidade:</label>
            <input type="text" asp-for="Nacionalidade" class="shadow-none form-control text-dark" id="exampleInputRecebedor" disabled>
            <span class="text-danger" asp-validation-for="Nacionalidade"></span>
        </div>
        <div class="mb-3">
            <label for="Nome" class="text-light form-label">Nome:</label>
            <input asp-for="Nome" type="text" class="shadow-none form-control text-dark" id="exampleInputFornecedor" disabled>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label class="text-light form-label" for="Status">Status:</label>
            <input type="text" asp-for="Status" class="shadow-none form-control text-dark" id="exampleInputLivroEmprestado" disabled>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>
        <div class="mb-3">
            <label class="text-light form-label" for="QtdEpisodios">Quantidade de Episódios:</label>
            <input type="text" asp-for="QtdEpisodios" class="shadow-none form-control text-dark" id="exampleInputLivroEmprestado" disabled>
            <span class="text-danger" asp-validation-for="QtdEpisodios"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a class="btn btn-primary" asp-controller="Doramas" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
